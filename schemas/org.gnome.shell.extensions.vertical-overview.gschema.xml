<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema path="/org/gnome/shell/extensions/vertical-overview/" id="org.gnome.shell.extensions.vertical-overview">
        <key type="i" name="left-offset">
            <default>200</default>
            <summary>Distance between left side of the monitor and the workspaces display</summary>
            <description></description>
        </key>
        <key type="i" name="right-offset">
            <default>200</default>
            <summary>Distance between right side of the monitor and the workspaces display</summary>
            <description></description>
        </key>
        <key type="i" name="dash-max-height">
            <default>80</default>
            <summary>Maximum height of the dash</summary>
            <description></description>
        </key>
        <key type="b" name="show-apps-on-top">
            <default>false</default>
            <summary>Move show applications button to the top of dash</summary>
            <description></description>
        </key>
        <key type="i" name="dash-max-icon-size">
            <default>64</default>
            <summary>Maximum icon size on dash</summary>
            <description></description>
        </key>
        <key type="b" name="custom-run-indicator">
            <default>false</default>
            <summary>Changes run indicator from dot to bar on the left side of icons</summary>
            <description></description>
        </key>
        <key type="b" name="override-dash">
            <default>true</default>
            <summary>Disable if you are use other extensions that override the dash</summary>
            <description></description>
        </key>
        <key type="b" name="hide-dash">
            <default>false</default>
            <summary>hide the dash</summary>
            <description></description>
        </key>
        <key type="i" name="thumbnails-position">
            <default>0</default>
            <summary>position of thumbnails in percentage</summary>
            <description></description>
        </key>
        <key type="b" name="static-background">
            <default>false</default>
            <summary>add static background</summary>
            <description></description>
        </key>
        <key type="b" name="scaling-workspace-background">
            <default>false</default>
            <summary>scaling workspace background in overview</summary>
            <description></description>
        </key>
        <key type="i" name="workspace-peek-distance">
            <default>0</default>
            <summary>workspace peek distance in pixels</summary>
            <description></description>
        </key>
        <key type="b" name="dash-move-labels">
            <default>false</default>
            <summary>Move the labels in the dash to the right of the icons</summary>
            <description></description>
        </key>
        <key type="b" name="dash-to-panel-left-right-fix">
            <default>false</default>
            <summary>Fixes for dash to panel</summary>
            <description></description>
        </key>
        <key type="b" name="old-style">
            <default>true</default>
            <summary>Show dash and workspace thumbnails in boxes connected to the sides of the screen</summary>
            <description></description>
        </key>
        <key type="b" name="default-old-style">
            <default>true</default>
            <summary>Disable this if you're using another pre-40 shell theme</summary>
            <description></description>
        </key>
        <key type="b" name="panel-in-overview">
            <default>true</default>
            <summary>Disable top bar turning transparent in overview</summary>
            <description></description>
        </key>
    </schema>
</schemalist>
